:root{color-scheme:light dark}html,body{margin:0 auto;height:100%;min-height:100%}body{--duration:1s;--timing:ease;background:var(--page-bg);color:var(--text);transition:color var(--duration)var(--timing),background-color var(--duration)var(--timing);font-family:system-ui,-apple-system,BlinkMacSystemFont,segoe ui,Roboto,Oxygen,Ubuntu,Cantarell,open sans,helvetica neue,sans-serif;display:flex;flex-direction:column}main{flex:auto}header{padding:1rem 0;border-bottom:.05rem solid var(--separator);flex:none}header .wrapper{display:flex;flex-direction:row;justify-content:space-between;align-items:center;gap:1rem}header .items{display:flex;flex-direction:row;justify-content:center;align-items:center;gap:1rem;font-size:1.25rem}header #logo{width:3rem}footer{border-top:.05rem solid var(--separator);margin:1rem 0;flex:none}footer .wrapper{display:flex;justify-content:space-between;flex-direction:row}footer .footer-col{display:flex;flex-direction:column}footer .footer-row{display:flex;justify-content:center;flex-direction:column;gap:.25rem}footer .contact-list,footer .social-media-list{list-style:none;margin-left:0;padding-left:0}.wrapper{margin:0 auto;width:50%}.adjacent-elements{display:flex;gap:1rem;flex-direction:row;justify-content:space-between;align-items:center}